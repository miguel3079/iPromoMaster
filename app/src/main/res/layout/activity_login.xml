<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo"
    tools:context="project.ipromo.activity.Login">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:src="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText

        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/txtName"
        android:hint="Name"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="#cacaca"
        />

    <EditText

        android:layout_width="fill_parent"

        android:layout_height="50dp"
        android:id="@+id/txtPass"
        android:layout_centerInParent="@+id/txtName"
        android:hint="Password"
        android:layout_below="@+id/txtName"
        android:inputType="textPassword"
        android:layout_alignEnd="@+id/txtName"
        android:background="#cacaca"
        android:layout_alignStart="@+id/txtName"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Sign in"
        android:id="@+id/btnLogin"

        android:layout_below="@+id/txtPass"
        android:background="#53786c"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignStart="@+id/txtPass"
        android:layout_alignEnd="@+id/txtPass" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:text="Sign Up"
        android:id="@+id/btnRegistrar"
        android:onClick="registrarse"

        android:layout_below="@+id/btnLogin"
        android:background="#96a9a3"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin" />
    <TextView
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:text="Our sign in with a social account"
        android:layout_below="@+id/btnRegistrar"
        android:layout_alignEnd="@+id/btnRegistrar"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="4dp"
        android:id="@+id/textView" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/facebook"

        android:layout_marginStart="68dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/textView" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/google"

        android:id="@+id/imageView3"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/imageView2" />

</RelativeLayout>
